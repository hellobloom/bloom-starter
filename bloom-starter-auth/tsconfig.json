{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "build"]
}
